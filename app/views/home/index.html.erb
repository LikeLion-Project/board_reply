<div class="container page_border">    
    <table class="table table-condensed">
        <thead>
          <tr>
            <th class="col-xs-2">번호</th>                    
            <th class="col-xs-6">제목</th>                
            <th class="col-xs-4">작성 시간</th>
          </tr>
        </thead>
        <tbody>
            <% @post_list.each do |post| %>                                                       
                <tr>                         
                    <td class="col-xs-2"><%= post.id %></td>
                    <td class="col-xs-6"><a href="/home/post/<%=post.id%>"><%= post.title %></a></td>                          
                    <td class="col-xs-4"><%= post.created_at.in_time_zone("Seoul").strftime("%Y.%m.%d %H:%M") %></td>                        
                </tr>
            <% end %>
        </tbody>
    </table>
    <a href="/home/write_post" type="button" class="stumble-big">글쓰기</a>
</div>
