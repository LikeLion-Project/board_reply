<div class="container page_border"> 
    <form action="/home/write" method="POST">
      <div class="form-group">
        <label for="input-title">제목</label>
        <input type="text" class="form-control" id="input-title" name="title" placeholder="제목을 입력하세요" required>
      </div>
      <div class="form-group">
        <label for="input-content">내용</label>
        <textarea class="form-control" id="input-content" rows="20" cols="50" name="content" placeholder="내용을 입력하세요." required></textarea>
      </div>
      <button type="submit" class="stumble-big">작성 완료</button>
    </form>
</div>